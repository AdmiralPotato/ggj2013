@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Game #705799 - GGJ2013</title>
    <link rel="stylesheet" href="/Style.css" />
    <link rel="stylesheet" href="/client/css/styles.css" />
    <style>
        html
        {
            background: none;
        }
    </style>
</head>
<body>
    <div id="ui">
        <input type="button" class="customEvent" id="SelectStation-None" value="Observer" />
        <input type="button" class="customEvent" id="SelectStation-Main" value="Main" />
        <input type="button" class="customEvent" id="SelectStation-Helm" value="Helm" />
        <input type="button" class="customEvent" id="SelectStation-Weapons" value="Weapons" />
        <input type="button" class="customEvent" id="SelectStation-Engineering" value="Engineering" />
        <input type="button" class="customEvent" id="SelectStation-Communication" value="Communication" />
        <input type="button" class="customEvent" id="SelectStation-GameMaster" value="Game Master" />

        <div class="stationUI" id="None">
            <select id="shipSelect">
                <option value="1">Heart of the Deep</option>
                <option value="2">Ship 2</option>
                <option value="3">Ship 3</option>
                <option value="4">Ship 4</option>
                <option value="5">Ship 5</option>
                <option value="6">Ship 6</option>
            </select>
            <input type="text" id="shipName" value="Enter Ship Name" />
            <input type="submit" onclick='$.post("SelectShip", "defaultShipNumber=" + $("#shipSelect").val() + "&name=" + $("#shipName").val());' value="Select Ship" />
        </div>

        <div class="stationUI active" id="Helm">
            <h3>Helm</h3>
            <input type="submit" onclick='$.post("SetMainScreen", "view=Front");' value="Front" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Left");' value="Left" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Right");' value="Right" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Rear");' value="Rear" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Tactical");' value="Tactical" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=LongRange");' value="LongRange" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Status");' value="Status" />
            <br />
            <input type="submit" onclick='$.post("SetDesiredSpeed", "amount=50");' value="Slow" />
            <input type="submit" onclick='$.post("SetDesiredSpeed", "amount=100");' value="Medium" />
            <input type="submit" onclick='$.post("SetDesiredSpeed", "amount=300");' value="Fast" />
            <input type="submit" onclick='$.post("SetImpulse", "amount=100");' value="Go" />
            <input type="submit" onclick='$.post("SetDesiredSpeed", "amount=0");' value="Stop" />
            <br />
            <input type="text" id="desiredHeading" value="0" />
            <input type="submit" onclick='$.post("SetDesiredHeading", "amount=" + $("#desiredHeading").val());' value="Set Heading" />
        </div>

        <div class="stationUI" id="Weapons">
            <h3>Weapons</h3>
            <input type="submit" onclick='$.post("SetMainScreen", "view=Front");' value="Front" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Left");' value="Left" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Right");' value="Right" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Rear");' value="Rear" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Tactical");' value="Tactical" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=LongRange");' value="LongRange" />
            <input type="submit" onclick='$.post("SetMainScreen", "view=Status");' value="Status" />
            <br />
            <input type="submit" onclick='$.post("ToggleShields");' value="Toggle Shields" />
            <br />
            Target
            <input type="text" id="desiredTarget" value="0" />
            <br />
            <select id="projectile">
                <option value="Skattershot">Skattershot</option>
                <option value="Torpedo">Torpedo</option>
                <option value="Hardshell">Hardshell</option>
                <option value="Knockshot">Knockshot</option>
                <option value="Nuke">Nuke</option>
            </select>
            <br />
            Tube 0
            <input type="submit" onclick='$.post("LoadProjectile", "tube=0&type=" + $("#projectile").val());' value="Load" />
            <input type="submit" onclick='$.post("LaunchProjectile", "tube=0&targetId=" + $("#desiredTarget").val() + "&type=" + $("#projectile").val());' value="Launch" />
            <br />
            Tube 1
            <input type="submit" onclick='$.post("LoadProjectile", "tube=1&type=" + $("#projectile").val());' value="Load" />
            <input type="submit" onclick='$.post("LaunchProjectile", "tube=1&targetId=" + $("#desiredTarget").val() + "&type=" + $("#projectile").val());' value="Launch" />
            <br />
            <select id="beam">
                <option value="StandardPhaser">Standard Phaser</option>
                <option value="HullPiercing">Hull Piercing</option>
                <option value="SuppresionPulse">Suppresion Pulse</option>
                <option value="ShieldDamper">Shield Damper</option>
                <option value="PlasmaVent">Plasma Vent</option>
                <option value="TractorBeam">Tractor Beam</option>
                <option value="RepulsorBeam">Repulsor Beam</option>
                <option value="Tether">Tether</option>
                <option value="Barrage">Barrage</option>
                <option value="SelfDestruct">Self Destruct</option>
                <option value="ShadowTether">Shadow Tether</option>
            </select>
            <input type="submit" onclick='$.post("FireBeam", "bank=0&targetId=" + $("#desiredTarget").val() + "&type=" + $("#beam").val());' value="Fire" />
        </div>

        <div class="stationUI" id="Engineering">
            <h3>Engineering</h3>
            <select id="engPart">
                <option value="Thrusters">Thrusters</option>
                <option value="Engines">Engines</option>
                <option value="Weapons">Weapons</option>
            </select>
            <input type="text" id="engAmount" value="0" />
            <input type="submit" onclick='$.post("SetPowerLevel", "part=" + $("#engPart").val() + "&amount=" + $("#engAmount").val());' value="Set Power" />
            <br />
            <select id="engCoolPart">
                <option value="Thrusters">Thrusters</option>
                <option value="Engines">Engines</option>
                <option value="Weapons">Weapons</option>
            </select>
            <input type="text" id="engCoolAmount" value="0" />
            <input type="submit" onclick='$.post("SetCoolantLevel", "part=" + $("#engCoolPart").val() + "&amount=" + $("#engCoolAmount").val());' value="Set Coolant" />
            <br />
            <select id="engRepairPart">
                <option value="Thrusters">Thrusters</option>
                <option value="Engines">Engines</option>
                <option value="Weapons">Weapons</option>
            </select>
            <input type="submit" onclick='$.post("SetRepairTarget", "part=" + $("#engRepairPart").val());' value="Set Repair" />
        </div>

        <div class="stationUI" id="Communication">
            <h3>Communication</h3>
            <input type="text" id="comTarget" value="0" />
            <select id="command">
                <option value="None">None</option>
                <option value="StatusReport">StatusReport</option>
                <option value="Surrender">Surrender</option>
                <option value="Taunt">Taunt</option>
                <option value="GoNorth">GoNorth</option>
                <option value="Stop">Stop</option>
            </select>
            <input type="submit" onclick='$.post("SendCommand", "targetId=" + $("#comTarget").val() + "&command=" + $("#command").val());' value="Send Command" />
        </div>

        <div class="stationUI" id="GameMaster">
            <h3>Game Master</h3>
            <input type="submit" onclick='$.post("Start");' value="Reset" />
            <input type="submit" onclick='$.post("BuildBase");' value="Build Base" />
            <input type="submit" onclick='$.post("BuildShip");' value="Build Ship" />
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <textarea id="missionStatus"></textarea>

        <div id="errorDiv"></div>
    </div>

    <script type="text/javascript">
        gameId = @Model.Id;
        isLocal = false;
    </script>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script type="text/javascript" src="/client/js/npos3d/core.js"></script>
    <script type="text/javascript" src="/client/js/npos3d/geom.circle.js"></script>
    <script type="text/javascript" src="/client/js/npos3d/geom.sphere.js"></script>
    <script type="text/javascript" src="/client/js/npos3d/font.js"></script>
    <script type="text/javascript" src="/client/js/shapes-wireframe.js"></script>
    <script type="text/javascript" src="/client/js/game.js"></script>
    <script type="text/javascript" src="/client/js/audio.js"></script>
    <script type="text/javascript" src="/client/js/network.js"></script>

    <script type="text/javascript">
        client.station = "@ViewBag.Player.Station";
    </script>

    
    <!-- move this wherever -->
